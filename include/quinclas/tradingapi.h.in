/**
 * RequestInfo.
 */
struct RequestInfo {
  const char *destination;                                 ///< Destination name, typically a gateway
};

/*
 * Handshake request.
 */

struct HandshakeRequest {
  const RequestInfo& request_info;                         ///< Routing information
