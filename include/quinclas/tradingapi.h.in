};

/**
 * Modify order.
 */
struct ModifyOrder {
  uint32_t order_id;                                       ///< Order id (as known by the gateway).
  const double quantity_change;                            ///< Desired quantity change
  const double limit_price;                                ///< Limit price
};

/**
 * Cancel order.
 */
struct CancelOrder {
