};

/*
 * Heartbeat request.
 */

struct HeartbeatRequest {
  const RequestInfo& request_info;                         ///< Routing information
  const Heartbeat& heartbeat;                              ///< Heartbeat details
};

/*
 * Create order request.
 */

struct CreateOrderRequest {
  const RequestInfo& request_info;                         ///< Routing information
