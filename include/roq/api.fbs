include "enums.fbs";

namespace roq.schema;

table SourceInfo {
  seqno:ulong;
  create_time:ulong;
}

table Handshake {
  api_version:string;
  application:string;
  hostname:string;
  pid:uint;
  uuid:string;
  login:string;
  password:string;
  subscriptions:[string];
  accounts:[string];
}

table HandshakeAck {
  api_version:string;
  application:string;
  hostname:string;
  pid:uint;
  failure:bool;
  failure_reason:string;
  server_uuid:string;
  server_name:string;
  shmem_s2c_name:string;
  shmem_s2c_size:uint;
  shmem_c2s_name:string;
  shmem_c2s_size:uint;
}

table Heartbeat {
  opaque:long;
}

table HeartbeatAck {
  opaque:long;
}

table DownloadBegin {
  account:string;
}

table DownloadEnd {
  account:string;
  max_order_id:uint;
}

table MarketDataStatus {
  status:GatewayStatus;
}

table OrderManagerStatus {
  account:string;
  status:GatewayStatus;
}

struct Layer {
  bid_price:double;
  bid_quantity:double;
  ask_price:double;
  ask_quantity:double;
}

table MarketByPrice {
  exchange:string;
  symbol:string;
  depth:[Layer];
  exchange_time:ulong;
  channel:ushort;
}

table TradeSummary {
  exchange:string;
  symbol:string;
  price:double;
  volume:double;
  turnover:double;
  side:Side;
  exchange_time:ulong;
  channel:ushort;
}

table ReferenceData {
  exchange:string;
  symbol:string;
  tick_size:double;
  limit_up:double;
  limit_down:double;
  multiplier:double;
}

table MarketStatus {
  exchange:string;
  symbol:string;
  trading_status:TradingStatus;
}

table PositionUpdate {
  account:string;
  exchange:string;
  symbol:string;
  side:Side;
  position:double;
  yesterday:double;
  last_order_local_id:uint;
  last_trade_id:uint;
}

table OrderUpdate {
  account:string;
  order_id:uint;
  exchange:string;
  symbol:string;
  order_status:OrderStatus;
  side:Side;
  remaining_quantity:double;
  traded_quantity:double;
  position_effect:PositionEffect;
  order_template:string;
  insert_time:ulong;
  cancel_time:ulong;
  order_local_id:uint;
  order_external_id:string;
}

table TradeUpdate {
  account:string;
  trade_id:uint;
  order_id:uint;
  exchange:string;
  symbol:string;
  side:Side;
  quantity:double;
  price:double;
  position_effect:PositionEffect;
  order_template:string;
  trade_time:ulong;
  order_external_id:string;
  trade_external_id:string;
}

table CreateOrder {
  account:string;
  order_id:uint;
  exchange:string;
  symbol:string;
  side:Side;
  quantity:double;
  order_type:OrderType;
  limit_price:double;
  time_in_force:TimeInForce;
  position_effect:PositionEffect;
  order_template:string;
}

table ModifyOrder {
  account:string;
  order_id:uint;
  quantity_change:double;
  limit_price:double;
}

table CancelOrder {
  account:string;
  order_id:uint;
}

table ModifyOrderAck {
  account:string;
  order_id:uint;
  failure:bool;
  reason:string;
  order_local_id:uint;
  order_external_id:string;
}

table CreateOrderAck {
  account:string;
  order_id:uint;
  failure:bool;
  reason:string;
  order_local_id:uint;
  order_external_id:string;
}

table CancelOrderAck {
  account:string;
  order_id:uint;
  failure:bool;
  reason:string;
  order_local_id:uint;
  order_external_id:string;
}

union EventData {
  Handshake,
  HandshakeAck,
  Heartbeat,
  HeartbeatAck,
  DownloadBegin,
  DownloadEnd,
  MarketDataStatus,
  OrderManagerStatus,
  MarketByPrice,
  TradeSummary,
  ReferenceData,
  MarketStatus,
  PositionUpdate,
  OrderUpdate,
  TradeUpdate,
  CreateOrder,
  ModifyOrder,
  CancelOrder,
  CreateOrderAck,
  ModifyOrderAck,
  CancelOrderAck,
}

table Event {
  source_info:SourceInfo;
  event_data:EventData;
}
